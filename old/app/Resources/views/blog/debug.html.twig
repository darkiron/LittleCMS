.pagination ul li.active {
 font-weight:bold;
}

 footer {
     width: 100%;
     height: 25%;
     background-color: #1e1e1e;
     font-family: 'Work Sans', sans-serif;
     color: #d0d0d0;
     display: flex;
     justify-content: center;
     flex-direction: column;
     align-items: center;
 }

 footer a {
     color: #d0d0d0;
     margin: 2px;
     font-size: 15px;
 }

 @media screen and (max-width: 780px) {
