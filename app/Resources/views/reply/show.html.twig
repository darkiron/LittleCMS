{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reply</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reply.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reply.email }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ reply.ip }}</td>
            </tr>
            <tr>
                <th>Reply</th>
                <td>{{ reply.reply }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reply.date }}</td>
            </tr>
            <tr>
                <th>Mode</th>
                <td>{% if reply.mode %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ reply.author }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reply_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reply_edit', { 'id': reply.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
