<meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
  html,
 body {
     width: 100%;
     height: 100%;
     margin: 0px;
     background: #f5f5f5;
     font-family: 'Rubik', sans-serif;
     font-size: 13px;
 }

 .side_nav {
     display: inline-block;
     width: 20%;
     position: fixed;
     left: -30%;
     top: 0px;
     bottom: 0px;
     background-color: #1e1e1e;
     z-index: 11;
     color: #d0d0d0;
     box-shadow: 5px 0px 14px rgba(24, 24, 26, 0.56);
     transition: left 2s;
 }

 .side_nav.open {
     left: 0px!important;
     transition: left 2s;
 }

 .overlay {
     width: 100%;
     background-color: rgba(30, 30, 30, 0.48);
     position: fixed;
     height: 100%;
     z-index: 1;
     bottom: 0px;
     left: 0px;
     rigth: 0px;
 }

 .open-overlay {
     overflow: hidden;
 }

 .side_nav a {
     color: #d0d0d0;
     text-decoration: none;
 }

 .side_nav ul {
     margin-top: 45px;
     list-style: none;
     padding: 0px;
     width: 100%;
     display: flex;
     flex-direction: column;
 }

 .side_nav ul:first-child {
     margin-top: 0px;
     flex-direction: row;
 }

 .side_nav ul:first-child li {
     float: left;
     width: 20%;
 }

 .side_nav ul:first-child li a {
     border-left: 1px solid #333;
 }

 .side_nav form {
     display: flex;
 }

 .side_nav form input {
     height: 40px;
     padding: 0px 5px;
     border-width: 1px;
     width: 100%;
 }

 .side_nav form button {
     background: transparent;
     border: 1px solid #333;
 }

 .side_nav ul li a {
     font-size: 1.5em;
     line-height: 2em;
     text-align: center;
     padding: 1% 0%;
     height: 40px;
     width: 100%;
     border-bottom: 1px solid #333;
     display: flex;
     justify-content: center;
     align-items: center;
 }

 .side_nav ul li a:first-child {
     border-top: 1px solid #333;
 }

 .side_nav ul li a:hover {
     background-color: #333;
 }

 .side_nav ul li {
     display: inline-block;
 }

 header {
     background-image: url('http://cdn.magdeleine.co/wp-content/uploads/2017/01/frseedyr418-adrian-1400x933.jpg');
     width: 100%;
     height: 50%;
     background-position: bottom;
     background-size: cover;
     color: #fff;
     position: relative;
     display: inline-block;
 }

 .header_content {
     width: 75%;
     margin: 50px auto;
     position: relative;
     font-size: 2.5em;
     padding: 0 15px;
 }

 #menu i {
     text-shadow: 5px 3px 3px #1e1e1e;
 }

 .header_content a {
     color: #fff;
     text-decoration: none;
 }

 section {
     display: flex;
     width: 75%;
     margin-left: auto;
     margin-right: auto;
     padding: 15px;
     flex-wrap: wrap;
     min-height: 80%;
 }

 section.pagination {
     min-height: 0%;
     display: flex;
     justify-content: center;
 }

 section article {
     display: flex;
     background-color: #333;
     width: 32%;
     border: 1px solid #fff;
     color: #fff;
     flex-direction: column;
     justify-content: center;
 }

 section article h2,
 section article p,
 section article div {
     width: 100%;
     text-align: center;
 }

 section article h2 {
     font-family: 'Archivo Black', sans-serif;
 }

 section article p {
     margin: 0px;
     line-height: 1.5em;
 }

 .article_hover {
     width: 100%;
     text-align: center;
     justify-content: center;
     flex-direction: column;
     text-decoration: none;
     z-index: 1;
 }

 button {
     width: 150px;
     height: 42px;
     text-transform: uppercase;
     font-weight: bold;
     border: 1px solid #99ce66;
     background-color: #99ce66;
     color: #fff;
     margin-left: auto;
     margin-right: auto;
     text-decoration: none;
     z-index: 0;
     cursor: pointer;
 }

 .author {
     text-transform: capitalize;
     font-weight: bold;
 }

 .comment:before {
     content: '\2022';
     margin-left: 5px;
     margin-right: 5px;
 }

 section article:hover a,
 section article a.active {
     display: flex;
 }

 section article:hover p,
 section article:hover h2 {
     display: none;
 }

 section article a {
     display: none;
 }

 section article:first-child {
     width: 64.15%;
     background-image: url('http://cdn.magdeleine.co/wp-content/uploads/2017/02/photo-1439211634854-369bece49719-1400x933.jpeg');
     background-position: center;
     background-size: cover;
 }

 section article:nth-child(2) {
     background-image: url('http://cdn.magdeleine.co/wp-content/uploads/2017/01/3-1400x933.jpg');
     background-position: center;
     background-size: cover;
 }

 section article:nth-child(3) {
     background-image: url('http://cdn.magdeleine.co/wp-content/uploads/2017/01/qpg8rkhrioo-annie-spratt-1400x933.jpg');
     background-position: center;
     background-size: cover;
 }

 section article:nth-child(4) {
